{
  "description": "Fields required to start the reset password procedure and receive the reset password link",
  "required": true,
  "content": {
    "application/json": {
      "schema": {
        "type":"object",
        "properties":{
          "firstname":{
            "type":"string",
            "description":"User's first name",
            "example":"John"
          },
          "lastname":{
            "type":"string",
            "description":"User's last name",
            "example":"Doe"
          },
          "email":{
            "type":"string",
            "description":"User's email",
            "example":"johndoe@example.com"
          }
        },
        "required":["firstname","lastname","email"]
      }
    }
  }
}